{% extends 'HnBootstrapLayoutBundle:form:bootstrap3_layout_inline.html.twig' %}

{% block form_row %}
    {%- spaceless %}
        <div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
            <div class="input-group">
                {{ form_label(form) }}
                {{ form_widget(form) }}
            </div>
            {{ form_errors(form) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block form_label %}
    {%- spaceless %}
        {% set label_attr = label_attr|merge({ style: 'margin-bottom: 0' }) %}
        <span class="input-group-addon">
            {{ parent() }}
        </span>
    {% endspaceless %}
{% endblock form_label %}